<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.rank.FansActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/ll_about"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/fans_ic_back_info"
                android:background="@color/white"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:src="@drawable/ic_back"
                android:layout_weight="1"
                android:scaleType="centerInside" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/fans_tablayout"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_weight="6"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:layout_collapseMode="parallax"/>


            <ImageButton
                android:id="@+id/fans_btn_modify"
                android:background="@color/white"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_baseline_person_add_24"
                android:scaleType="centerInside" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/fans_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/editext_selector"
                android:hint="搜索用户备注或名字"
                android:inputType="text" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fans_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/fans_viewpager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.coordinatorlayout.widget.CoordinatorLayout>